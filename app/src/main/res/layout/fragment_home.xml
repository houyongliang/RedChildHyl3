<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hhzmy.fragment.HomeFragment">

    <include
        android:id="@+id/inclu"
        layout="@layout/include_home_head"></include>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/inclu"
        android:scrollbars="none">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_home_loop"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/colorWhite"
                app:layout_heightPercent="35%">

            </android.support.v4.view.ViewPager>


            <LinearLayout
                android:id="@+id/ll_home"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignBottom="@id/vp_home_loop"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                app:layout_heightPercent="3%"
                app:layout_widthPercent="100%">

            </LinearLayout>
            <!--android:background="@color/colorAccent"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_alignParentRight="true"-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/vp_home_loop"
                android:background="#33ff0000"></android.support.v7.widget.RecyclerView>
        </android.support.percent.PercentRelativeLayout>


    </ScrollView>

</RelativeLayout>


