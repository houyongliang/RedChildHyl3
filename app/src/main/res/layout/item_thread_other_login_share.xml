<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_login_qq_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
       android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:drawableTop="@mipmap/login_qq"
        android:gravity="center_horizontal"
        android:text="qq分享" />

    <TextView
        android:id="@+id/tv_login_weixin_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:drawableTop="@mipmap/login_weixin"

        android:text="微信分享" />

    <TextView
        android:id="@+id/tv_login_xina_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:drawableTop="@mipmap/login_sina"
        android:gravity="center_horizontal"
        android:text="新浪分享" />


</LinearLayout>

